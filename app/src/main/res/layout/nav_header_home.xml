<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:id="@+id/content_nav_view"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="35dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="bottom">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:text="Sippa"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textAllCaps="true"
            android:textAlignment="viewStart"
            android:typeface="normal" android:textStyle="bold"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:id="@+id/student_name_text"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:text="@string/nav_header_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textAllCaps="true" android:background="#0003A9F4" android:textAlignment="viewStart"
            android:typeface="normal" android:textStyle="bold"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/student_matricula_text"
            android:textColor="@color/colorPrimary"
            android:text="@string/nav_header_subtitle" android:textStyle="bold" android:textAllCaps="true"
            android:background="#0003A9F4"/>

</LinearLayout>
